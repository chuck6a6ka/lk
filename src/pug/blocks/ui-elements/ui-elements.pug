mixin button(type, text, link, id)
    a(id=id href=link class='button button_'+ type)=text

mixin input(type, state, id, label, placeholder)
    div(class='input input_' + state)
        label(for=id)=label
        input(type=type placeholder=placeholder id=id required)

mixin checkbox(text, id)
    div(class='checkbox')
        label(for=id)
            input(id=id type='checkbox')
            p=text


